generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int             @id @default(autoincrement())
  email     String          @unique
  password  String
  boards    BoardMember[]   
  tasks     Task[]       
}

model Board {
  id        Int             @id @default(autoincrement())
  title     String
  members   BoardMember[]   
  tasks     Task[]         
  createdAt DateTime        @default(now())
}

model BoardMember {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  board    Board  @relation(fields: [boardId], references: [id])
  boardId  Int
  role     String @default("member")

  @@unique([userId, boardId]) // Ayn覺 kullan覺c覺y覺 bir board'a birden fazla eklemeyi engeller
}

model Task {
  id           Int      @id @default(autoincrement())
  title        String
  board        Board    @relation(fields: [boardId], references: [id]) 
  boardId      Int
  assignedTo   User?    @relation(fields: [assignedToId], references: [id]) // 
  assignedToId Int?
}
